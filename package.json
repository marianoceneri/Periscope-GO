{
    "name": "periscope-go",
    "displayName": "Periscope GO",
    "description": "Visualiza la implementación de funciones Go de forma instantánea usando Shift+Space. Facilita la navegación y comprensión del código mostrando la definición completa de la función seleccionada.",
    "version": "0.0.1",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/marianoceneri/Periscope-GO.git"
    },
    "engines": {
        "vscode": "^1.104.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:go"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "periscope-go.showImplementation",
                "title": "Ver Implementación de Función"
            }
        ],
        "keybindings": [
            {
                "command": "periscope-go.showImplementation",
                "key": "shift+space",
                "when": "editorLangId == go"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorLangId == 'go'",
                    "command": "periscope-go.showImplementation",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "npm run check-types && npm run lint && node esbuild.js",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "package": "npm run check-types && npm run lint && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "check-types": "tsc --noEmit",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/vscode": "^1.104.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@typescript-eslint/eslint-plugin": "^8.42.0",
        "@typescript-eslint/parser": "^8.42.0",
        "eslint": "^9.34.0",
        "esbuild": "^0.25.9",
        "npm-run-all": "^4.1.5",
        "typescript": "^5.9.2",
        "@vscode/test-cli": "^0.0.11",
        "@vscode/test-electron": "^2.5.2"
    }
}